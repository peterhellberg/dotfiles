[user]
  name = Peter Hellberg
  email = peter@c7.se
[push]
  default = upstream
[apply]
  whitespace = nowarn
[core]
  excludesfile = /Users/peter/.gitignore
[alias]
  l = log --graph --pretty=format:'%C(yellow)%h %Cgreen%ae%Creset (%ar): %s'
  churn = !git --no-pager log --name-only --oneline | grep -v ' ' | sort | uniq -c | sort -nr | head
	undo-commit = reset --soft HEAD^
[branch]
  autosetuprebase = always
[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[diff]
  algorithm = patience
